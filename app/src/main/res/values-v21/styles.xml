<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="camera_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="thumbnail_style">
        <item name="android:layout_width">@dimen/thumbnail_size</item>
        <item name="android:layout_height">@dimen/thumbnail_size</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:contentDescription">@string/thumbnail_description</item>
        <item name="android:elevation">@dimen/small_elevation</item>
    </style>

    <style name="language_label_view_style">
        <item name="android:layout_width">@dimen/language_label_view_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="floating_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="language_label_view_style_land">
        <item name="android:layout_width">@dimen/language_label_view_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="floating_button_style_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="thumbnail_style_land">
        <item name="android:contentDescription">@string/thumbnail_description</item>
        <item name="android:background">@drawable/thumbnail_background</item>
        <item name="android:layout_height">@dimen/thumbnail_height_land</item>
        <item name="android:layout_width">@dimen/thumbnail_width_land</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="camera_view_style_land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="result_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:minWidth">52dp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="delete_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:background">@drawable/ic_delete_purple_a700_36dp</item>
        <item name="android:contentDescription">@string/delete_button_description</item>
        <item name="android:elevation">@dimen/small_elevation</item>
    </style>

    <style name="delete_button_style_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:background">@drawable/ic_delete_purple_a700_36dp</item>
        <item name="android:contentDescription">@string/delete_button_description</item>
        <item name="android:elevation">@dimen/small_elevation</item>
    </style>

    <style name="language_label_view_style_detail">
        <item name="android:layout_width">@dimen/language_label_view_size_details</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="result_view_style_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
    </style>

    <style name="object_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/object_image_height</item>
        <item name="android:contentDescription">@string/image_description</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="object_image_style_land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/object_image_height_land</item>
        <item name="android:contentDescription">@string/image_description</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="savedObjectsAppBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">@dimen/activity_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="savedObjectsEmptyViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/no_data</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/empty_view_messageColor</item>
        <item name="android:textSize">@dimen/empty_view_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="savedObjectsRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="widget_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
