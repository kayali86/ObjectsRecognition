<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widgetBackgroundColor">

    <RelativeLayout
        android:id="@+id/widget_label_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_word_label"
            style="@style/widget_label_style"
            android:text="@string/word" />

        <TextView
            android:id="@+id/tv_translation_label"
            style="@style/widget_label_style"
            android:layout_alignParentEnd="true"
            android:text="@string/translation"
            android:textAlignment="viewEnd" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_widget_saved_objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_label_layout"
        android:background="@color/widgetBackgroundColor"/>

    <LinearLayout
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_label_layout"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/widget_empty_view_image_description"
            android:src="@drawable/no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_saved_objects"
            android:textAlignment="center"
            android:textColor="@color/empty_view_messageColor"
            android:textSize="@dimen/empty_view_text_size"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>